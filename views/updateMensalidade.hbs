<div class="editInfos">
    <h2>Editar informações de {{infos.nome}}</h2>
    <form action="/updateMensalidade" method="post">
        <label for="id">Id:</label>
        <input type="text" name="id" value="{{infos.id}}">
        <label for="nome">Nome:</label>
        <input type="text" name="nome" value="{{infos.nome}}">
        <label for="preco">preco:</label>
        <input type="text" name="preco" value="{{infos.preco}}">
        <label for="quantAlunos">quantidades de Alunos:</label>
        <input type="text" name="quantAlunos" value="{{infos.quantAlunos}}">
        <label for="horario">Horário de treino:</label>
        <input type="text" name="horario" value="{{infos.horario}}">
        <label for="descricao">Descrição da atividade:</label>
        <textarea name="descricao" cols="20" rows="7">{{infos.descricao}}</textarea>
        <input type="submit">
    </form>
    <button><a href="/mensalidade">Voltar</a></button>
</div>   




























