<head>
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <header class="infoHeader">
        <h1>Mensalidade</h1>
        <p></p>
    </header>
    <div class="btnCad">
        <button><a href="/">Rotas</a></button>
        <button><a href="/cadmensalidade">Cadastro de valores de mensalidades</a></button>
        <button><a href="/buscar">Buscar</a></button>
    </div>
    <div class="infomensalidade">
        {{#each listar}}
        <div>
            <h2>#{{id}} {{nome}}</h2>
            <a class="linkInfos" href="/mensalidade/{{this.id}}">
                <ul>
                    <li><strong>preco:</strong> {{preco}}</li>
                    <li><strong>quantAlunos:</strong> {{quantAlunos}}</li>
                    <li><strong>horario:</strong> {{horario}}</li>
                    <li><strong>Descrição:</strong> {{descricao}}</li>
                </ul>
                <button><a href="/mensalidade/edit/{{this.id}}">Editar</a></button>
                <button><a href="/remove/{{this.id}}">Excluir</a></button>
            </a>
        </div>
        {{/each}}
    </div>
    
</body>