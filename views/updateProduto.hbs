<div class="editInfos">
    <h2>Editar informações de {{infos.nome}}</h2>
    <form action="/updateprod" method="post">
        <label for="id">Id:</label>
        <input type="text" name="id" value="{{infos.id}}">
        <label for="nome">Nome:</label>
        <input type="text" name="nome" value="{{infos.nome}}">
        <label for="preco"> Preço:</label>
        <input type="text" name="preco" value="{{infos.preco}}">
        <label for="descricao">Descrição:</label>
        <input type="text" name="descricao" value="{{infos.descricao}}">
