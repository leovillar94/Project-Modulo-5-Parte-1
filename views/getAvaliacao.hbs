<head>
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <header class="infoHeader">
        <h1>Avaliacao</h1>
      
        
    </header>
    <div class="btnCad">
        <button><a href="/">Rotas</a></button>
        <button><a href="/cadastroAvaliacao">Cadastro de Avaliação</a></button>
        <button><a href="/buscaravalicao">Buscar</a></button>
    </div>
    <div class="infoCursos">
        {{#each listarTurmas}}
        <div>
            <h2>Avaliação #{{id}}</h2>
            <a class="linkInfos" href="/avaliacao/{{this.id}}">
                <ul>
                    <li><strong>alunos:</strong> {{alunos}}</li>
                    <li><strong>idade:</strong> {{idade}}</li>
                    <li><strong>peso:</strong> {{peso}}</li>
                </ul>
                <button><a href="/avaliacao/edit/{{this.id}}">Editar</a></button>
                <button><a href="/removerAvaliacao/{{this.id}}">Excluir</a></button>
            </a>
        </div>
        {{/each}}
    </div>
    
</body>