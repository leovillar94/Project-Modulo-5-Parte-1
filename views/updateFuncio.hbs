<div class="editInfos">
    <h2>Editar informações de {{infos.nome}}</h2>
    <form action="/updateFuncio" method="post">
        <label for="id">Id:</label>
        <input type="text" name="id" value="{{infos.id}}">
        <label for="nome">Nome:</label>
        <input type="text" name="nome" value="{{infos.nome}}">
        <label for="matricula">Matricula:</label>
        <input type="text" name="matricula" value="{{infos.matricula}}">
        <label for="telefone">Telefone:</label>
        <input type="text" name="telefone" value="{{infos.telefone}}">
        <label for="endereco">Endereço:</label>
        <input type="text" name="endereco" value="{{infos.endereco}}">
        <input type="submit">
    </form>
    <button><a href="/funcionarios">Voltar</a></button>
</div>







































